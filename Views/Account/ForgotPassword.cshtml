@model A8PlatForm.Domains.ViewModels.CPAdmin.ForgotPasswordViewModel
@{
    ViewBag.Title = "Reset your password";
}
<head>
    @Styles.Render("~/Content/css")
</head>
<body style="background-color: white;">
<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3>
                                <i class="fa fa-lock fa-4x"></i>
                            </h3>
                            <h2 class="text-center">Forgot Password?</h2>
                            <p>You can reset your password here.</p>
                            <div class="panel-body">
                                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                                {
                                    @Html.AntiForgeryToken()
                                    <fieldset>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-envelope"></i>
                                                </span>
                                                @Html.TextBoxFor(m => m.Email, new {@class = "form-control input-block", @id = "email_field", @name = "email", @placeholder = "Enter your email address", @autofocus = "autofocus"})
                                                @Html.ValidationMessageFor(m => m.Email)
                                            </div>
                                        </div>
                                        <div class="form-group col-sm-12 col-lg-12 col-md-12">
                                            <input class="btn btn-lg btn-primary btn-block" value="Send My Password" type="submit">
                                        </div>
                                    </fieldset>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}